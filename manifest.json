{
  "manifest_version": 2,
  "name": "Matrix Reader - Hidden Tab Edition",
  "version": "2.0.0",
  "description": "Transform any webpage into a cyberpunk reading experience using hidden tab proxy architecture for perfect content extraction",
  
  "applications": {
    "gecko": {
      "id": "matrix-reader@nightdrive.dev"
    }
  },
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>",
    "webNavigation"
  ],
  
  "background": {
    "scripts": ["background-enhanced.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_title": "Toggle Matrix Reader Mode (v2.0)",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "commands": {
    "toggle-matrix-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Toggle Matrix Reader mode"
    }
  },
  
  "web_accessible_resources": [
    "styles/*",
    "fonts/*",
    "assets/*",
    "lib/readability.js",
    "stealth-extractor.js",
    "proxy-controller.js"
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png", 
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}