{
  "manifest_version": 2,
  "name": "VibeReader",
  "version": "2.2.0",
  "description": "Set Vibes // Transform any webpage into a cyberpunk coding aesthetic with Tailwind CSS framework and hidden tab proxy architecture",

  "applications": {
    "gecko": {
      "id": "vibe-reader@nightdrive.dev"
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>",
    "webNavigation"
  ],

  "background": {
    "scripts": ["src/vibe-utils.js", "src/background-enhanced.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "Set Vibes",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "commands": {
    "toggle-vibe-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Set Vibes // activate cyberpunk mode"
    }
  },

  "web_accessible_resources": [
    "styles/*",
    "fonts/*",
    "assets/*",
    "lib/purify.min.js",
    "lib/readability.js",
    "lib/rxjs.min.js",
    "lib/aalib.js",
    "src/stealth-extractor.js",
    "src/proxy-controller.js"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
